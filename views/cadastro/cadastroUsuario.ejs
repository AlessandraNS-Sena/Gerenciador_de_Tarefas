<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Cadastro</title>
</head>
<body>
  <h1>Pomorganiza</h1>

  <form id="CadastrodeUsuario">
    <div>
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome_user" required>
    </div>
    
    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email_user" required>
    </div>

    <div>
      <label for="senha">Senha:</label>
      <input type="password" id="senha" name="senha_user" required>
    </div>

    <button type="submit">Acessar</button>
  </form>
</body>

<script>
  const form = document.getElementById('CadastrodeUsuario');

  form.addEventListener('submit', async (e) => {
   e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries()); // Transforma FormData em objeto

    try {
      const response = await fetch('/api/users/AdicionarUsuario', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        const result = await response.json();
        alert('Usuário criado com sucesso!');
        // Redirecionar para outra página, se quiser:
        window.location.href = '/home';
      } else {
        const error = await response.json();
        alert('Erro: ' + error.message);
      }
    } catch (err) {
      console.error('Erro de rede:', err.json());
      alert('Erro ao conectar com o servidor.');
    }
  });
</script>
</html>

