<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Cadastro</title>
  <link rel="stylesheet" href="/styles/cadastro.css"> <!-- caminho do CSS -->
</head>
<body>
  <div class="container">
    <div class="form-box">
      <img src="/imagens/logoPomorganiza.png" alt="Logo Pomorganiza" class="logo">

      <form id="CadastrodeUsuario">
        <label for="nome">Nome</label>
        <input type="text" id="nome" name="nome_user" required>

        <label for="email">Email</label>
        <input type="email" id="email" name="email_user" required>

        <label for="senha">Senha</label>
        <input type="password" id="senha" name="senha_user" required>

        <button type="submit">Acessar</button>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('CadastrodeUsuario');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/users/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          alert('Usu√°rio criado com sucesso!');
          window.location.href = '/api/projetos';
        } else {
          const error = await response.json();
          alert('Erro: ' + error.message);
        }
      } catch (err) {
        alert('Erro ao conectar com o servidor.');
      }
    });
  </script>
</body>
</html>
